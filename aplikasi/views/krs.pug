extends layoutSimak

block content

    main(role='main')

      .jumbotron
        .container-fluid
          h1.text-center Kartu Rencana Study
          hr
          if rencanaStudy
            .row
              .col-md-2
                h2 Nama
                h2 NIM
              .col-md-4
                h2 : #{rencanaStudy.nama}
                h2 : #{rencanaStudy.nim}
            hr
            .row
              .col-md-12
                h3 Daftar Matkul yang di kontrak :
                h3.matkul  #{rencanaStudy.matkul1}
                h3.matkul  #{rencanaStudy.matkul2}
                
            .row
              .col
                hr
                h3  Status Persetujuan
                if rencanaStudy.status=='disetujui'
                  h3.setujuKRS  #{rencanaStudy.status}
                  p Jika ingin ada perubahan hubungi dosen akademik anda
                else
                  h3.tolakKRS  #{rencanaStudy.status}
                  p Hubungi dosen akademik anda
              
          else
            p
              | Anda belum mengisi KRS
            p
              a.btn.btn-success.btn-md(href='/simak/rencanaStudy/isiKrs', role='button') Tambah Matkul +
    
